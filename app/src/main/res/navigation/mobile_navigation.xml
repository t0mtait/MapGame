<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ca.unb.mobiledev.mapgame.ui.home.HomeFragment"
        android:label="Play"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_leaderboard"
        android:name="ca.unb.mobiledev.mapgame.ui.leaderboard.LeaderboardFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_leaderboard" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="ca.unb.mobiledev.mapgame.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>