<?xml version="1.0" encoding="utf-8"?>



<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
<GridLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:columnCount="1"
android:rowCount="2"
android:padding="16dp"
    android:layout_gravity="top"
tools:context=".ChallengesActivity">

<!-- Add ImageViews for each grid item -->


<ImageView
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    android:src="@drawable/newyork"
    android:scaleType="fitXY"
    android:layout_margin="8dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:src="@drawable/paris"
        android:scaleType="fitXY"
        android:layout_margin="8dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:src="@drawable/tokyo"
        android:scaleType="fitXY"
        android:layout_margin="8dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:src="@drawable/city_image_placeholder"
        android:scaleType="fitXY"
        android:layout_margin="8dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:src="@drawable/sydney"
        android:scaleType="fitXY"
        android:layout_margin="8dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:src="@drawable/sanfran"
        android:scaleType="fitXY"
        android:layout_margin="8dp"/>



<!-- Add more ImageViews for each city -->

</GridLayout>

</ScrollView>
